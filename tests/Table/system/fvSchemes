FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default Euler;
}

gradSchemes
{
    default         Gauss linear;
    grad(p)         Gauss linear;
}

divSchemes
{
    default          none;
 
    div(phi,U)       Gauss linearUpwind grad(U);

    div(phi,k)       Gauss  upwind;
    div(phi,epsilon) Gauss  upwind;

//    div(phi,k)       Gauss linearUpwind grad(k);//upwind;
//    div(phi,epsilon) Gauss linearUpwind grad(epsilon);//upwind;

    div(phiU,p)      Gauss limitedLinear 1;
    div(phid,p)      Gauss limitedLinear 1;    
//    div(phi,Yi_h)    Gauss limitedLinear01 1;
    div(phi,Yi_h)    Gauss limitedLinear01 1;

    div((phi|interpolate(rho)),p) Gauss limitedLinear 1;

    div((muEff*dev2(T(grad(U)))))       Gauss linear;
 
    div((phi|interpolate(rho)),cNp) Gauss limitedLinear 1;
    div((phi|interpolate(rho)),rhosFv) Gauss limitedLinear 1;


}

laplacianSchemes
{
    default                 Gauss linear limited 0.5;//corrected;
}

interpolationSchemes
{
    default         linear;
    interpolate(HbyA) linear;
}

snGradSchemes
{
    default         corrected;
}

fluxRequired
{
    default 	no;
    p;
    pcorr;
}

// ************************************************************************* //
